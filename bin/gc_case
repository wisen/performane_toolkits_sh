#!/bin/bash
# auto build by config

#utils
. color.u
. process.u
. os.u
. env.u
#logs
. log.event
. log.kernel
. log.meminfo
. log.vmstat
. log.top
. dump.fps
. log.mainlog
#parsers
. applist.parser
. meminfo.parser
. appinfo.parser
. kinfo.parser
. misc.parser
. vmstat.parser
#configures
. ext_free_bytes.conf
. misc.conf

#actions start
prepare_app_list $SCRIPT_ROOT/applist/tmp.app.list3

if [ "false" == "true" ];then
	prepare_prebuilt_tools $SCRIPT_ROOT/prebuilt_tools
fi

function testcase_gc_case {

	if [ ! $1 ];then
		test_cycles=50
	else
		test_cycles=$1
	fi

	#adb reboot
	adb wait-for-device
	
	build_vesion=`adb shell getprop ro.bootimage.build.fingerprint|awk -F "/" '{print $5}'|awk -F ":" '{print $2}'`
	
	gc_case_start_time=`date "+%Y%m%d%H%M%S"`
	logfile_gc_case=logfile_actions_gc_case.${gc_case_start_time}.txt
	red "Device OS is: $build_vesion" | tee -a $logfile_gc_case
	
	if [ $build_vesion == "userdebug" -o $build_vesion == "eng" ];then
		if [ "off" == "on" ];then
			#gc related start
			verity_status=`adb disable-verity|grep system|awk '{if(NR==1)print }'`
			if [ $verity_status == "disabled" ];then
				green "Verity already disabled on system"
			else
				adb root
				adb disable-verity
				adb reboot
				adb wait-for-device
			fi
			
			adb root
			red "Begin to Modify GC parameters" | tee -a $logfile_gc_case
			adb wait-for-device
			if [ -f build.prop ];then
				rm -f build.prop
			fi
			adb root
			sleep 2
			adb wait-for-device
			adb pull //system/build.prop .
			echo dalvik.vm.heapstartsize=8m >> build.prop
			echo dalvik.vm.heaputilization=0.75 >> build.prop
			echo dalvik.vm.heapminfree=2560k >> build.prop
			echo dalvik.vm.heapmaxfree=10m >> build.prop
			adb push build.prop //system/
			adb shell chmod 0644 //system/build.prop
			red "End to Modify GC parameters" | tee -a $logfile_gc_case
			adb reboot
			adb wait-for-device
			adb root
			adb wait-for-device
			echo "dalvik.vm.heapstartsize="`adb shell getprop dalvik.vm.heapstartsize` | tee -a $logfile_gc_case
			echo "dalvik.vm.heaputilization="`adb shell getprop dalvik.vm.heaputilization` | tee -a $logfile_gc_case
			echo "dalvik.vm.heapminfree="`adb shell getprop dalvik.vm.heapminfree` | tee -a $logfile_gc_case
			echo "dalvik.vm.heapmaxfree="`adb shell getprop dalvik.vm.heapmaxfree` | tee -a $logfile_gc_case
			#wait the home
			sleep 20
			#gc related end
		fi
	else
		red "You cannot modify the GC parameters on user release!"
	fi

	#lock_cpu_freq
	#lock_cpu_freq
	#dis_cpu_hp
	#en_cpu_hp
	#set_dirty_ratio 20
	#set_bg_ratio 5
	set_ext_free_kbytes 32400
	#turn_on_processmanager
	#turn_off_processmanager
	#enable_zram
	#disable_zram
	#enable_ksm
	#disable_ksm
	#set_ksm_sleep_millisecs 20
	#set_ksm_pages_to_scan 100
	
	#misc related
	set_console_loglevel 0
	
	fps_folder=fps_${gc_case_start_time}
	if [ ! -d $fps_folder ];then
		mkdir $fps_folder
	fi
	
	logfile_meminfo=logfile_meminfo_gc_case.${gc_case_start_time}.txt
	logfile_kernellog=logfile_kernellog_gc_case.${gc_case_start_time}.txt
	logfile_eventlog=logfile_eventlog_gc_case.${gc_case_start_time}.txt
	logfile_vmstat=logfile_vmstat_gc_case.${gc_case_start_time}.txt
	logfile_top=logfile_top_gc_case.${gc_case_start_time}.txt
	logfile_mainlog=logfile_mainlog_gc_case.${gc_case_start_time}.txt
	
	#start_terminal
	start_event_terminal $logfile_eventlog am_activity_launch_time am_kill am_anr am_pss
	#start_kernel_ternimal $logfile_kernellog
	#start_meminfo_terminal $logfile_meminfo
	#start_vmstat_ternimal $logfile_vmstat
	#start_top_terminal $logfile_top
	start_mainlog_terminal $logfile_mainlog ANRManager art

	for ((j=1;j<=$test_cycles;j=$j+1))
	do
		for ((i=0;i<${#activities[@]};i=$i+1))
		do
			cur_freq=`adb shell "cat /sys/bus/cpu/devices/cpu0/cpufreq/cpuinfo_cur_freq"|awk '{if(NR==1) print $1}'`
			cpu_online=`adb shell "cat /sys/devices/system/cpu/online"|awk '{if(NR==1) print $1;}'`
			echo "CPU Freq: $cur_freq Online: $cpu_online" | tee -a $logfile_gc_case
			red_white "Cycle $test_cycles-$j, App $i" | tee -a $logfile_gc_case
			echo "["`date "+%Y-%m-%d %H:%M:%S"`"]Start activity: "${activities[$i]} | tee -a $logfile_gc_case
			#timestamp=`adb shell cat /proc/uptime|awk '{print $1}'`
			#record_ftrace   &
			##clean_fps_by_packageName ${packages[$i]} > .tmp.null
			timeout 10 adb shell am start -W ${activities[$i]} | tee -a $logfile_gc_case
			#dump_fps_by_packageName ${packages[$i]} >> ./$fps_folder/fps.${packages[$i]}
			
			timeout 3 adb shell input keyevent 3 #simulation user press home key

		done
	done
	gc_case_end_time=`date "+%Y%m%d%H%M%S"`
	echo "The Test total use "$((${gc_case_end_time}-${gc_case_start_time}))" Seconds." | tee -a $logfile_gc_case
# 4. close all log bash
	kill_others
	
	logfile_result=logfile_result_gc_case.${gc_case_end_time}.txt
	#clac_the_result
	#collect_misc_info | tee -a $logfile_result
	#parse_meminfo $logfile_meminfo | tee -a $logfile_result
	#parse_app_launchtime $logfile_eventlog | tee -a $logfile_result
	#parse_app_crash $logfile_eventlog | tee -a $logfile_result
	#parse_lmk_count_byADJ $logfile_kernellog | tee -a $logfile_result
	#parse_vmstat $logfile_vmstat | tee -a $logfile_result
	#parseGC $logfile_mainlog gc_case
}

testcase_gc_case $1
if [ -f $logfile_result ];then
	tar -czf logfile_gc_case_${gc_case_end_time}.tar.gz logfile_*${gc_case_start_time}.txt $logfile_result
else
	tar -czf logfile_gc_case_${gc_case_end_time}.tar.gz logfile_*${gc_case_start_time}.txt
fi

#mail_title="-t 'TestCase[gc_case]: Result at ${gc_case_end_time}'"
#mail_attachment="-a 'logfile_${gc_case_end_time}.tar.gz'"
#mail_content_file="-f '$logfile_result'"
#python /e/memory_script/bin/mail/sendmail.py       -t "TestCase[gc_case]: Result at ${gc_case_end_time}" -f "$logfile_result" -a "logfile_gc_case_${gc_case_end_time}.tar.gz"
